{
	"name": "starlight-gtm-workspace",
	"version": "0.0.1",
	"description": "Starlight Google Tag Manager plugin for Astro",
	"homepage": "https://github.com/jbend/starlight-gtm",
	"repository": {
		"type": "git",
		"url": "https://github.com/jbend/starlight-gtm.git"
	},
	"bugs": {
		"url": "https://github.com/jbend/starlight-gtm/issues"
	},
	"scripts": {
		"dev": "pnpm --filter starlight-gtm-docs dev",
		"build": "pnpm --filter starlight-gtm build",
		"build:all": "pnpm --filter starlight-gtm build && pnpm --filter starlight-gtm-docs build",
		"test": "pnpm -r test",
		"check": "astro check --root docs",
		"lint": "biome check --write",
		"version": "pnpm changeset version && pnpm i --no-frozen-lockfile",
		"changeset": "changeset",
		"release": "changeset publish"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.5",
		"@biomejs/biome": "2.3.7",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.7",
		"@types/node": "^24.10.1",
		"astro": "catalog:",
		"concurrently": "^9.2.1"
	},
	"keywords": [
		"astro",
		"starlight",
		"plugin"
	],
	"author": "jbendix",
	"license": "ISC",
	"packageManager": "pnpm@10.17.0"
}