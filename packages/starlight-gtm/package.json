		"dev": "tsdown ./index.ts --watch",
		"test": "echo \"No tests specified\" && exit 0"
	},
	"peerDependencies": {
		"@astrojs/starlight": "catalog:"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/node": "^24.10.1",
		"tsdown": "^0.16.7",
		"typescript": "^5.9.3"
	}
