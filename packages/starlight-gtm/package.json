{
	"name": "starlight-gtm",
	"version": "0.0.1",
	"description": "Starlight plugin for Google Tag Manager",
	"author": "jbendix",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"starlight",
		"gtm",
		"plugin",
		"documentation",
		"astro"
	],
	"exports": {
		".": "./index.ts",
		"./overrides/SkipLink.astro": "./overrides/SkipLink.astro",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"styles"
	],
	"scripts": {
		"lint": "eslint . --cache --max-warnings=0",
